<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:layout_marginBottom="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="15dp"
        android:paddingVertical="10dp">

        <TextView
            android:id="@+id/holidayItemName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Holiday name"
            android:paddingBottom="4dp"
            style="@style/FontBig" />

        <TextView
            android:id="@+id/holidayItemDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="September 09,2023"
            style="@style/FontRegular"/>


    </LinearLayout>

    <com.example.holidate.views.FavoriteBtn
        android:id="@+id/holidayItemFavoriteBtn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingHorizontal="10dp"
        android:layout_gravity="end"/>

    <View
        android:id="@+id/holidayItemDivider"
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="@color/colorPrimaryLight"
        android:layout_gravity="bottom"/>

</androidx.cardview.widget.CardView>